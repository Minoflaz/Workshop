<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="Style.css">
    {% endblock %}
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">

</head>

<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="50">

<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid" id="nav">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="{{ path('index') }}" class="navbar-left"><img src="../Images/logoo.png"></a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{ path('login') }}"><span class="glyphicon glyphicon-log-in"></span> Connexion</a></li>
                <li><a href="{{ path('inscription') }}"><span class="glyphicon glyphicon-pencil"></span> Inscription</a></li>
            </ul>
        </div>
    </div>
</nav>

<div id="myPage" class="jumbotron text-center bg-1">
    <h1>Espace Authentification</h1>
</div>


<div id="inscription" class="container-fluid bg-1">
    <div class="row">
        </br></br>
        <div class="col-sm-4">
            <span class="glyphicon glyphicon-pencil logo slideanim"></span>
        </div>
        </br></br>
        <div class="col-sm-8">
            <h2>Formulaire d'inscription</h2></br></br>
        </div>
    </div>

    <form class="form-horizontal"  role="form" method="post">
        <div class="col-sm-2">
        </div>

        <div class="form-group">
            <input type="hidden" name="id"class="form-control" id="id">
        </div>
        <div class="col-sm-2">
        </div>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group">
            <label class="control-label col-sm-2" for="username">Pseudo</label>
            <div class="col-sm-4">{{ form_widget(form.username,{'attr': {'class': 'form-control','placeholder': 'Pseudonyme'}}) }}</div></div>

        <div class="col-sm-2">
        </div>

        <!-- </div> -->


        <div class="form-group">
            <label class="control-label col-sm-2" for="mdp">Mot de passe :</label>
            <div class="col-sm-4">
                {{ form_widget(form.password,{'attr': {
                    'class': 'form-control',
                    'placeholder': 'Mot de passe'}}) }}
            </div>
        </div>
        <div class="col-sm-2">
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="prenom">Prenom :</label>
            <div class="col-sm-4">
                {{ form_widget(form.prenom,{'attr': {
                    'class': 'form-control',
                    'placeholder': 'Prenom',
                    'pattern': "[A-Za-z]{2,20}"}}) }}
            </div>
        </div>
        <div class="col-sm-2">
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="nom">Nom :</label>
            <div class="col-sm-4">
                {{ form_widget(form.nom,{'attr': {'class': 'form-control','placeholder': 'Nom'}}) }}
            </div>
        </div>
        <div class="col-sm-2">
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="mailclient">Adresse Mail :</label>
            <div class="col-sm-4">
                {{ form_widget(form.email,{'attr': {
                    'class': 'form-control',
                    'placeholder': 'Adresse mail',
                    'pattern': "[a-zA-Z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$"}}) }}
            </div></div>

        <div class="col-sm-2">
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="adresse">Ville :</label>
            <div class="col-sm-4">
                {{ form_widget(form.ville,{'attr': {'class': 'form-control','placeholder': 'Ville'}}) }}
            </div>
        </div>
        <div class="col-sm-2">
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="telephoneclient">NÂ° Telephone :</label>
            <div class="col-sm-4">
                {{ form_widget(form.numeroTelephone,{'attr': {
                    'class': 'form-control',
                    'placeholder': 'lol',
                    'pattern' : "(01|02|03|04|05|06|07|08|09)[ \.\-]?[0-9]{2}[ \.\-]?[0-9]{2}[ \.\-]?[0-9]{2}[ \.\-]?[0-9]{2}"}}) }}
            </div></div>
        <div class="col-sm-2">
        </div>



        </br>
        <div class="col-sm-5">
        </div>
        <button type="submit" name="form[save]" value="Inscription" class="btn btn-default">S'inscrire</button>
        <button type="reset" name="annuler" class="btn btn-default">Annuler</button></br>
        {% do form.save.setRendered %}
        {{ form_end(form) }}
</div>
</form>



</div>


<!-- Footer -->
<footer class="text-center">
    <a class="up-arrow" href="#myPage" data-toggle="tooltip" title="TO TOP">
        <span class="glyphicon glyphicon-chevron-up"></span>
    </a><br><br>
</footer>



</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script type="text/javascript" src="Style.js"></script>

</html>

