<div id="myPage" class="jumbotron text-center bg-1">
    <h1>Nouvelle Demande</h1>
    <img src="../Images/add.png" alt="Membre">
</div>

<div id="demandes" class="container-fluid text-center">

    <h2>Formulaire d'ajout d'une nouvelle demande</h2></br></br>

    <form role="form" method="post" >

        <div class="form-group">
            <input type="hidden" name="id" class="form-control" id="id">
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <label for="titre">Titre :</label>
                </div>

                <div class="col-sm-6">
                    {{ form_widget(form.titre,{'attr': {
                        'class': 'form-control',
                        'placeholder': 'Entrez le titre de la demande'
                    }}) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    <label for="texte">Description :</label>
                </div>
                <div class="col-sm-6">
                    {{ form_widget(form.texte,{'attr': {
                        'class': 'form-control',
                        'placeholder': 'Entrez la description de la demande',
                        'rows' : "5"
                    }}) }}
                </div>
            </div></br>



            <button type="submit" name="form[save]" class="btn btn-default">Ajouter</button>
            <button type="reset" name="annuler" class="btn btn-default">Annuler</button>
            {% do form.save.setRendered %}
            {{ form_end(form) }}
            </br>
        </div>
    </form>

</div>


<!-- Footer -->
<footer class="text-center">
    <a class="up-arrow" href="#myPage" data-toggle="tooltip" title="TO TOP">
        <span class="glyphicon glyphicon-chevron-up"></span>
    </a><br><br>
</footer>



</body>

