<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCVQeDa3IcmbVpbAOQd9K-4D72q0uwtIbg"></script>
<script>
    var myCenter = new google.maps.LatLng(48.8914522, 2.278704800000014);

    function initialize() {
        var mapProp = {
            center:myCenter,
            zoom:12,
            scrollwheel:false,
            draggable:false,
            mapTypeId:google.maps.MapTypeId.ROADMAP
        };

        var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);

        var marker = new google.maps.Marker({
            position:myCenter,
        });

        marker.setMap(map);
    }

    google.maps.event.addDomListener(window, 'load', initialize);
</script>

