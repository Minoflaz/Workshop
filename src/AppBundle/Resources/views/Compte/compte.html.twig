<div id="connexion" class="container-fluid">
    <div class="row">
        </br></br>
        <div class="col-sm-4">
            <span class="glyphicon glyphicon-user logo slideanim"></span>
        </div>

        <div class="col-sm-4">
            </br><h2>Formulaire de Connexion</h2></br></br>
            <form role="form" method="post" action="{{ path('login_check') }}">
                <div class="form-group">
                    <label for="username">Pseudo :</label>

                        <input type="text" name="_username"class="form-control" id="email" placeholder="Entrez votre pseudo" >

                </div>
                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input type="password" name="_password" class="form-control" id="pwd" placeholder="Entrez votre Mot de passe">
                </div></br>
                <div class="checkbox">
                    <label><input type="checkbox"> Se souvenir de moi</label>
                </div></br>

                <input type="hidden" name="_target_path" value="/membre" />

                <button type="submit" name="connexion" value="Connexion" class="btn btn-default">Connexion</button>
                <button type="reset" name="annuler" class="btn btn-default">Annuler</button>


            </form>
        </div>
    </div>
    </br></br>
</div>






